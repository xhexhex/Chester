#tcase APM_array_tests

#define PROCESS_ALL_PAIRS( ck_assert_condition ) \
int left = 0, right = 1, pair_count = 0; \
bool done = false; \
while( !done ) { \
	while( APM[ right ] ) { \
		++pair_count; \
		ck_assert( ck_assert_condition ); \
		++right; } \
	++left; \
	right = left + 1; \
	if( !APM[ right ] ) { \
		done = true; \
		break; } } \
ck_assert( pair_count == 1604736 );
// 1792C2 = 1604736

