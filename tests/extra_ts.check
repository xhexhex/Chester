#tcase shredder_to_std_fen_conv_tests

#define TEST_WITH_ARGS(fen_str, expected) \
    strcpy(fen, fen_str); \
    ck_assert( !che_fen_validator(fen) ); \
    ck_assert( !che_fen_validator(expected) ); \
    shredder_to_std_fen_conv(fen); \
    ck_assert( !strcmp(fen, expected) );

